{
    "compilerOptions": {
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "module": "ES2015",
        "strict": true,
        "rootDir": "./src",
        "outDir": "lib/esm",
        "target": "es2020",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "node_modules",
      "test/*.test.ts"
    ],
    "include": [
        "src/*.ts",
      ]
}